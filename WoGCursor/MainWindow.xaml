<m:CursorWindow x:Class="Mygod.WorldOfGoo.Cursor.MainWindow" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:m="http://schemas.mygod.tk/wpf"
                Title="{x:Static m:CurrentApp.Title}" Icon="{x:Static m:CurrentApp.MainIcon}"
                Closed="OnClose" Background="Transparent">
    <m:WorldOfGooCursor x:Name="WoGCursor" x:FieldModifier="private" FullscreenMode="True" Border="{Binding Border}"
                        DataContext="{StaticResource Settings}" Foreground="{Binding Foreground}"
                        ExhaledRadius="{Binding ExhaledRadius}" InhaledRadius="{Binding InhaledRadius}"
                        BorderThickness="{Binding BorderThickness}" BreathDuration="{Binding BreathDuration}"
                        UseBezierCurve="{Binding SmootherCurve}" Length="{Binding Length}"
                        ShrinkRate="{Binding ShrinkRate}" />
</m:CursorWindow>
